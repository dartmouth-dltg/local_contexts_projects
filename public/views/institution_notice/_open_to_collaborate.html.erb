<%
  heading_size = 'h3' if heading_size.blank?
%>
<div class="row">
  <div class="col-sm-12 institution_notices">
    <<%= heading_size %>><%= I18n.t("institution_notices_title.open_to_collaborate", :default => "Open to Collaborate") %></<%= heading_size %>>
    <div class="institution-notice-img">
      <%= image_tag(AppConfig[:public_proxy_url] + "/assets/LC-Institution-Notice-Open-to-Collaborate_2021-10-23.svg", alt: "Open to Collaborate notice") %>
    </div>
    <div class="institution-notice-text">
      <p><%= t("institution_notice_description.open_to_collaborate") %></p>
      <p><%= t("institution_notice_local_contexts_more_html") %></p>
    </div>
  </div>
</div>
